.messages{data: {message: {id: message.id}}}
  .chat-main__messages__message
    .chat-main__messages__message__upper-info
      .chat-main__messages__message__upper-info__talker
        = message.user.name
      .chat-main__messages__message__upper-info__date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .chat-main__messages__message__textman
      - if message.content.present?
        %p.text__content
          = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present? 